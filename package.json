{
  "name": "magicapi",
  "version": "1.0.0",
  "description": "MagicAPI - A visual programming tool for designing and testing API workflows",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main.js && electron .\"",
    "package": "electron-builder",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "api",
    "testing",
    "visual-programming",
    "electron",
    "workflow",
    "magicapi"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.8.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "jsonpath": "^1.1.1",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.magicapi.flowdesigner",
    "productName": "MagicAPI",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
